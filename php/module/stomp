wget http://pecl.php.net/get/stomp-1.0.5.tgz
tar -zxf stomp-1.0.5.tgz
cd stomp-1.0.5
/srv/php/bin/phpize
./configure --enable-stomp --with-php-config=/srv/php/bin/php-config
make && make install



